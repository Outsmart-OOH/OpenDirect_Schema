{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/Outsmart-OOH/OpenDirect_Schema/main/v2.1/uris/accounts/(id)/orders/(id)/lines/POST_request.json",
    "type": "object",
    "title": "Request for POST /lines",
    "description": "The schema of a request that adds a line to the order",
    "allOf": [
        {
            "$ref": "https://raw.githubusercontent.com/Outsmart-OOH/OpenDirect_Schema/main/v2.1/objects/line.json"
        }
    ],
    "properties": {
        "$schema": "https://github.com/Outsmart-OOH/OpenDirect_Schema/blob/main/v2.1/uris/properties/schema.json"
    },
    "unevaluatedProperties": false,
    "required": [
        "name",
        "productid",
        "startdate",
        "enddate",
        "ratetype",
        "rate",
        "qty",
        "cost"
    ]
}